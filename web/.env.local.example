# AWS Configuration for Image Generation
# Copy this file to .env.local and fill in your AWS credentials

# AWS Credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# AWS Bedrock Configuration
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=stability.stable-diffusion-xl-v1

# S3 Configuration (optional - for storing generated images)
AWS_S3_BUCKET=your-story-images-bucket
AWS_S3_REGION=us-east-1

# Image Generation Settings
IMAGE_GENERATION_ENABLED=true
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
IMAGE_QUALITY=high

# Development Settings
NODE_ENV=development

# Google Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
