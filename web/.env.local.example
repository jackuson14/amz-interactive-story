# AWS Configuration for Image Generation
# Copy this file to .env.local and fill in your AWS credentials

# AWS Credentials
APP_AWS_ACCESS_KEY_ID=your_aws_access_key_here
APP_AWS_SECRET_ACCESS_KEY=your_APP_AWS_SECRET_ACCESS_KEY_here
AWS_REGION=us-east-1

# AWS Bedrock Configuration
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=stability.stable-diffusion-xl-v1

# S3 Configuration (optional - for storing generated images)
AWS_S3_BUCKET=your-story-images-bucket
AWS_S3_REGION=us-east-1

# Image Generation Settings
IMAGE_GENERATION_ENABLED=true
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
IMAGE_QUALITY=high

# Development Settings
NODE_ENV=development

# AWS Polly Configuration for Text-to-Speech
AWS_POLLY_REGION=ap-southeast-1
AWS_POLLY_OUTPUT_FORMAT=mp3
AWS_POLLY_SAMPLE_RATE=22050

# Default Polly Voice Settings
AWS_POLLY_DEFAULT_VOICE=Ivy
AWS_POLLY_VOICE_ENGINE=neural
AWS_POLLY_TEXT_TYPE=ssml
AWS_POLLY_NATURAL_SPEECH=true

# Google Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
